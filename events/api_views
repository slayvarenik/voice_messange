from rest_framework import viewsets, status
from rest_framework.decorators import action
from rest_framework.response import Response
from rest_framework.permissions import IsAuthenticated
from django.db.models import Q
from datetime import datetime, date
from .models import Events, NameEvents
from .serializers import EventsSerializer, NameEventsSerializer


class EventsViewSet(viewsets.ModelViewSet):
    serializer_class = EventsSerializer
    permission_classes = [IsAuthenticated]

    def get_queryset(self):
        user = self.request.user
        queryset = Events.objects.filter(user=user).select_related('user', 'event_type')
        
        date_filter = self.request.query_params.get('date', None)
        if date_filter:
            try:
                filter_date = datetime.strptime(date_filter, '%Y-%m-%d').date()
                queryset = queryset.filter(data=filter_date)
            except ValueError:
                pass
        
        month = self.request.query_params.get('month', None)
        year = self.request.query_params.get('year', None)
        if month and year:
            try:
                queryset = queryset.filter(data__year=year, data__month=month)
            except ValueError:
                pass
        
        event_type = self.request.query_params.get('event_type', None)
        if event_type:
            queryset = queryset.filter(event_type_id=event_type)
        
        return queryset.order_by('-data', 'start_time')

    def perform_create(self, serializer):
        serializer.save(user=self.request.user)

    @action(detail=False, methods=['get'])
    def upcoming(self, request):
        today = date.today()
        events = self.get_queryset().filter(data__gte=today).order_by('data', 'start_time')[:10]
        serializer = self.get_serializer(events, many=True)
        return Response(serializer.data)

    @action(detail=False, methods=['get'])
    def important(self, request):
        user = request.user
        events = Events.objects.filter(
            user=user,
            event_type__name__icontains='важн'
        ).select_related('user', 'event_type').order_by('data', 'start_time')
        
        serializer = self.get_serializer(events, many=True)
        return Response(serializer.data)


class NameEventsViewSet(viewsets.ReadOnlyModelViewSet):
    queryset = NameEvents.objects.all().order_by('name')
    serializer_class = NameEventsSerializer
    permission_classes = [IsAuthenticated]

